{
    "editor.rulers": [
        80
    ],
    "editor.formatOnSave": true,
    "editor.snippetSuggestions": "top",
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "eslint.options": {
        "env": {
            "browser": true,
            "jest/globals": true,
            "es6": true
        },
        "parserOptions": {
            "ecmaVersion": 2019,
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "rules": {
            "no-debugger": "off"
        }
    },
}